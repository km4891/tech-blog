<section>
    <div class="card border-dark mb-3" style="max-width: 18rem;">
        <div class="card-header"><h2>Create New Post</h2></div>
        <div class="card-body text-dark">
            <div class="card-text">
                <form class="new-post-form">
                    <div>
                        <label for="post-title">Title</label>
                        <input type="text" id="post-title" name="post-title" />
                    </div>
                    <div>
                        <label for="post-text">Post</label>
                        <input id="post-text" name="post-text" />
                    </div>
                    <button type="submit" class="btn">Create</button>
                </form>
            </div>
        </div>
    </div>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>